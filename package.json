{
  "name": "jordson",
  "version": "0.1.0",
  "description": "Single Page Application with NodeJS server",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "cwebp": "cp components/assets/images/*.* public/assets/images && find public/assets/images -type f \\( -iname \"*.jpg\" -o -iname \"*.jpeg\" -o -iname \"*.png\" \\) -exec cwebp {} -o {}.webp \\;",
    "watch": "./app/dev/bundler.js --watch & sass --watch components/ressources/sass:public/assets/ & tsc --allowJs --out public/assets/app.js public/assets/app-uncompiled.ts",
    "prod": "./app/dev/bundler.js --compress ; sass components/ressources/sass:public/assets/ --style=compressed",
    "fonts": "./app/dev/bundler.js --fonts",
    "mexp": "mongoexport --collection=pages --db=jrd --out=components/database/pages.json",
    "start": "node --experimental-modules --trace-warnings ./server.js",
    "doc": "node --experimental-modules --trace-warnings ./doc.js",
    "ts": "tsc --allowJs --out public/assets/app.js public/assets/app-uncompiled.ts",
    "tsProd": "terser --output public/assets/app.js public/assets/app.js",
    "wasm": "asc public/assets/app.js -b public/assets/app.wasm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndreLeclercq/jordson.git"
  },
  "author": "Andre LECLERCQ",
  "license": "CC-BY-NC-SA-4.0",
  "homepage": "https://github.com/AndreLeclercq/jordson#readme",
  "devDependencies": {
    "argon2": "^0.27.0",
    "assemblyscript": "^0.19.0",
    "marked": "^2.0.1",
    "mongodb": "^3.6.2",
    "mongodb-import-export-cli": "^1.3.1",
    "nodemailer": "^6.4.11",
    "sass": "^1.26.11",
    "terser": "^4.8.0",
    "typescript": "^4.3.2"
  },
  "keywords": [
    "SPA",
    "nodejs",
    "javascript"
  ],
  "bugs": {
    "url": "https://github.com/AndreLeclercq/jordson/issues"
  }
}
